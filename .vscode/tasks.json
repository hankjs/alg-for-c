{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "gcc sort",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-fexec-charset=GBK",
        "-g",
        "-o",
        "sort.exe",
        "./utils/*.c",
        "./sort/*.c"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}